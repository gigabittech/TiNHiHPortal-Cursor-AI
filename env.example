# =============================================================================
# TiNHiH Portal - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (Required)
# Format: postgresql://username:password@host:port/database
# For Neon Database: postgresql://username:password@ep-xxx-xxx-xxx.region.aws.neon.tech/database
DATABASE_URL=postgresql://username:password@localhost:5432/tinhih_portal

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret Key (Required)
# Generate a strong secret key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret (Required)
# Generate a strong session secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================

# Stripe Secret Key (Required for billing features)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key (Required for frontend)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (Required for webhook handling)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Port (Optional - defaults to 5000)
PORT=5000

# Node Environment (Required)
# Options: development, production, test
NODE_ENV=development

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Host (for email notifications)
SMTP_HOST=smtp.gmail.com

# SMTP Port
SMTP_PORT=587

# SMTP Username (email address)
SMTP_USER=your-email@gmail.com

# SMTP Password (app password for Gmail)
SMTP_PASS=your-app-password

# From Email Address
FROM_EMAIL=noreply@tinhih.org

# =============================================================================
# SMS CONFIGURATION (Optional)
# =============================================================================

# Twilio Account SID (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio Phone Number
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FILE STORAGE (Optional)
# =============================================================================

# AWS S3 Bucket Name (for file uploads)
S3_BUCKET_NAME=tinhih-portal-uploads

# AWS Access Key ID
AWS_ACCESS_KEY_ID=your_aws_access_key

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Region
AWS_REGION=us-east-1

# =============================================================================
# TELEHEALTH CONFIGURATION (Optional)
# =============================================================================

# Zoom API Key (for telehealth integration)
ZOOM_API_KEY=your_zoom_api_key

# Zoom API Secret
ZOOM_API_SECRET=your_zoom_api_secret

# Google Meet API Key (for telehealth integration)
GOOGLE_MEET_API_KEY=your_google_meet_api_key

# Microsoft Teams App ID (for telehealth integration)
TEAMS_APP_ID=your_teams_app_id

# Microsoft Teams App Secret
TEAMS_APP_SECRET=your_teams_app_secret

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics ID
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable Debug Mode (development only)
DEBUG=false

# Enable API Logging
API_LOGGING=true

# Database Logging (SQL queries)
DB_LOGGING=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Telehealth Features
ENABLE_TELEHEALTH=true

# Enable SMS Notifications
ENABLE_SMS=false

# Enable Email Notifications
ENABLE_EMAIL=true

# Enable File Uploads
ENABLE_FILE_UPLOADS=true

# Enable Analytics
ENABLE_ANALYTICS=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100

# Session Timeout (minutes)
SESSION_TIMEOUT=1440

# Password Minimum Length
PASSWORD_MIN_LENGTH=8

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Organization Name
ORG_NAME=TiNHiH Foundation

# Organization Email
ORG_EMAIL=contact@tinhih.org

# Organization Phone
ORG_PHONE=+1-555-123-4567

# Organization Address
ORG_ADDRESS=123 Healthcare Ave, Medical District, MD 12345

# Default Timezone
DEFAULT_TIMEZONE=America/New_York

# Default Currency
DEFAULT_CURRENCY=USD

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Default Appointment Reminder Hours
DEFAULT_APPOINTMENT_REMINDER_HOURS=24

# Default Business Hours Start
DEFAULT_BUSINESS_HOURS_START=08:00

# Default Business Hours End
DEFAULT_BUSINESS_HOURS_END=18:00

# Default Appointment Duration (minutes)
DEFAULT_APPOINTMENT_DURATION=30

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Output Directory
BUILD_OUTPUT_DIR=dist

# Static Assets Path
STATIC_ASSETS_PATH=public

# API Base URL (for production)
API_BASE_URL=https://api.tinhih.org

# Client Base URL (for production)
CLIENT_BASE_URL=https://portal.tinhih.org 